/*更好的侧边滚动条*/
::-webkit-scrollbar {
  width: 20px;
  height: 10px;
  
}
::-webkit-scrollbar-button {
  width: 0;
  height: 0;
}
::-webkit-scrollbar-button:start:increment,::-webkit-scrollbar-button:end:decrement {
  display: none;
}
::-webkit-scrollbar-corner {
  display: block;
}
::-webkit-scrollbar-thumb {
  border-radius: 8px;
  background-color: rgba(0,0,0,.2);
}
::-webkit-scrollbar-thumb:hover {
  border-radius: 8px;
  background-color: rgba(0,0,0,.5);
}
::-webkit-scrollbar-track,::-webkit-scrollbar-thumb {
  border-right: 1px solid transparent;
  border-left: 1px solid transparent;
}
::-webkit-scrollbar-track:hover {
  background-color: rgba(0,0,0,.15);
}
::-webkit-scrollbar-button:start {
  width: 20px;
  height: 80px;
  background: url(../images/boll.png) ; /*可以添加滚动条样式*/
}

//back-to-top 小箭头去掉
.fa-arrow-up:before {
    content: "";
}
// 页面进度百分比
#scrollpercent{
  position: absolute;
  top: 0;
  right: calc(-85px);
  font-size: xx-large;
}

/*back-to-top按钮*/
.back-to-top.back-to-top-on {
    bottom: unset;
    top: calc(100vh - 1300px - 200px);
}

.back-to-top {

    width: 70px;
    height: 900px;
    top: -900px;
    bottom: unset;
    transition: all 0.5s ease-in-out;
    background: url("/images/uploads/scroll.png");
    box-sizing: border-box;
    position: fixed;
    z-index: 1050;
    padding: 0 6px;
    font-size: 12px;
    opacity: 1;
    color: #fff;
    cursor: pointer;
    text-align: center;

